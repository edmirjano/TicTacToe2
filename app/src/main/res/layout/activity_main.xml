<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fusha"
        android:columnCount="3"
        android:rowCount="3"
        app:columnCount="3"
        app:rowCount="3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="165dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="5" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="shfaq"
            android:padding="10dp"
            android:tag="8" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/vertilay"
        android:layout_width="397dp"
        android:layout_height="149dp"
        android:background="@drawable/dark"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/grid"
        app:layout_constraintTop_toTopOf="@+id/grid"
        tools:layout_editor_absoluteX="6dp">

        <TextView
            android:id="@+id/tekst1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ic_launcher_background"
            android:gravity="center"
            android:text="TextView"
            android:textSize="45dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="luaj"
            android:text="Luaj Perseri" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>